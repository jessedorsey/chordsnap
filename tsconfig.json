{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["./*.ts", "./src/**/*.ts"],
    "exclude": ["node_modules"]
} 